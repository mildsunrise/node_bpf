{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es2018",
        "lib": ["es2015", "es2016", "es2017"],
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "lib"
    ]
}
